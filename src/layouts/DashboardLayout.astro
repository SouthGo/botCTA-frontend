---
import '../styles/global.css';

export interface Props {
  title?: string;
}

const { title = 'Albion CTA System' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600;700&display=swap" />
  </head>
  <body class="bg-background text-slate-200 min-h-screen">
    <div class="flex min-h-screen">
      <aside class="w-64 bg-surface/80 border-r border-white/5 hidden md:flex flex-col">
        <div class="px-6 py-6 border-b border-white/5">
          <h1 class="text-xl font-semibold tracking-widest text-primary uppercase">
            Albion CTA
          </h1>
        </div>
        <nav class="flex-1 px-4 py-6 space-y-2 text-sm">
          <a class="block rounded-lg px-3 py-2 hover:bg-white/5 transition" href="/ctas">Panel de CTAs</a>
          <a class="block rounded-lg px-3 py-2 hover:bg-white/5 transition" href="/history">Historial</a>
        </nav>
        <footer class="px-4 py-6 border-t border-white/5 text-xs uppercase tracking-widest text-slate-500">
          Albion Guild Ops
        </footer>
      </aside>
      <main class="flex-1 flex flex-col">
        <header class="border-b border-white/5 bg-surface/80 backdrop-blur">
          <div class="mx-auto max-w-5xl px-4 py-4 flex items-center justify-between">
            <div>
              <p class="text-xs uppercase tracking-widest text-slate-500">Sistema CTA</p>
              <h2 class="text-lg font-semibold text-white">{title}</h2>
            </div>
            <slot name="header-actions" />
          </div>
        </header>
        <section class="flex-1">
          <div class="mx-auto max-w-5xl px-4 py-6">
            <slot />
          </div>
        </section>
      </main>
    </div>
  </body>
</html>

