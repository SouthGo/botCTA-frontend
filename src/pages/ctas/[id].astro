---
import DashboardLayout from '@layouts/DashboardLayout.astro';
import AssignmentPanel from '@components/AssignmentPanel.jsx';
import CloseCtaButton from '@components/CloseCtaButton.jsx';
import LoginButton from '@components/LoginButton.jsx';
import RoleBadge from '@components/RoleBadge.jsx';
import { api } from '@lib/api.js';
import { readSessionCookie } from '@lib/auth.js';

const { id } = Astro.params;
const sessionCookie = Astro.cookies.get('session')?.value ?? '';
const user = readSessionCookie(sessionCookie);
const { cta, postulants } = await api.getCtaDetails(id);

if (!cta) {
  return Astro.redirect('/ctas');
}

const allowedCallers = (import.meta.env.PUBLIC_ALLOWED_CALLERS ?? '')
  .split(',')
  .map((value) => value.trim())
  .filter(Boolean);

const isCaller = Boolean(
  user && (allowedCallers.length === 0 || allowedCallers.includes(user.id))
);
---

<DashboardLayout title={`CTA: ${cta.title}`}>
  <div slot="header-actions">
    <LoginButton user={user} />
  </div>

  <section class="space-y-6">
    <header class="rounded-xl border border-white/5 bg-surface/70 p-6 shadow-lg shadow-primary/5">
      <div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
        <div>
          <p class="text-xs uppercase tracking-widest text-slate-500">CTA #{cta.id}</p>
          <h1 class="text-3xl font-semibold text-white">{cta.title}</h1>
          <p class="mt-2 text-sm text-slate-300 max-w-2xl">{cta.description}</p>
        </div>
        <div class="space-y-2 text-sm text-slate-300">
          <p>
            <span class="text-xs uppercase tracking-widest text-slate-500">Estado</span><br />
            <span class="text-lg font-semibold text-white">{cta.status}</span>
          </p>
          <p>
            <span class="text-xs uppercase tracking-widest text-slate-500">Fecha</span><br />
            <span>{cta.date ? new Date(cta.date).toLocaleString() : 'Sin definir'}</span>
          </p>
          {isCaller && (
            <CloseCtaButton client:load ctaId={cta.id} disabled={cta.status === 'closed'} />
          )}
        </div>
      </div>
    </header>

    <section class="rounded-xl border border-white/5 bg-surface/60 p-6 space-y-4">
      <h2 class="text-lg font-semibold text-white">Composición objetivo</h2>
      {cta.compo ? (
        <div class="flex flex-wrap gap-3">
          {Object.entries(cta.compo).map(([role, amount]) => (
            <RoleBadge role={role} count={amount} />
          ))}
        </div>
      ) : (
        <p class="text-sm text-slate-400">No se definió una composición para esta CTA.</p>
      )}
    </section>

    <section class="rounded-xl border border-white/5 bg-surface/60 p-6 space-y-4">
      <header class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-white">Postulantes</h2>
        {isCaller ? (
          <span class="rounded-full border border-primary/40 bg-primary/10 px-3 py-1 text-xs uppercase tracking-widest text-primary">
            Modo caller
          </span>
        ) : (
          <span class="text-xs uppercase tracking-widest text-slate-500">Solo lectura</span>
        )}
      </header>
      <AssignmentPanel
        client:load
        ctaId={cta.id}
        initialPostulants={postulants}
        canAssign={isCaller}
      />
    </section>
  </section>
</DashboardLayout>

